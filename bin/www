#!/usr/bin/env node

// Module dependencies.
var app = require('../app');
var http = require('http');

// const
const hostname = 'localhost';
const port = 18159;

// Create HTTP server.
var server = http.createServer(app);

// Listen on provided port, on all network interfaces.
server.listen({
  port: port,
  host: hostname
}, () => {
  console.log(`Server running at http://${hostname}:${port}/`);
});